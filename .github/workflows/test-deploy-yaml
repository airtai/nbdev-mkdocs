name: Deploy nbdev-mkdocs generated documentation to GitHub Pages

on:  [workflow_dispatch, pull_request, push]

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-python@v4
        with:
          python-version: 3.x
      - name: Install Dependencies
        run: |
          python -m pip install --upgrade pip
          cfg_file=.ghp-config
          if [[ -f "$cfg_file"  ]] && grep -q "USE_PRE=true" "$cfg_file"
          then
            pip install 'nbdev[dev]'
            nbdev_install_quarto
            pip install -Uq git+https://github.com/airtai/nbdev-mkdocs.git
            make
          else
            pip install -Uq nbdev
            nbdev_install_quarto
            pip install nbdev_mkdocs
            pip install -e ".[dev]"
          fi
          nbdev_mkdocs prepare

